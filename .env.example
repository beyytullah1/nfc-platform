# Database
DATABASE_URL="postgresql://postgres:mysecretpassword@localhost:5432/nfc_platform?schema=public"
DIRECT_URL="postgresql://postgres:mysecretpassword@localhost:5432/nfc_platform?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-super-secret-key-here-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Base URL (Production domain)
NEXT_PUBLIC_BASE_URL="https://temasal.com"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service (SMTP)
# For Gmail: service is automatic if EMAIL_HOST is not set (uses smtp.gmail.com)
# For Custom Domain (e.g. cPanel, Zoho, AWS SES):
EMAIL_HOST="smtp.yourdomain.com"
EMAIL_PORT="587"
EMAIL_SECURE="false" # true for port 465, false for 587
EMAIL_USER="info@temasal.com"
EMAIL_PASS="your-smtp-password"

# Node Environment
NODE_ENV="development"

# Gemini AI API (for Plant AI Chat)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# Google Analytics (Tracking)
# Get your Measurement ID (G-XXXXXXXXXX) from: https://analytics.google.com
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
